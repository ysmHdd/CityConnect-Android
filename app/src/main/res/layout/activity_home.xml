<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_home_premium">


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_cityconnect"
        android:background="@drawable/bg_logo_glow"
        android:padding="14dp"
        android:contentDescription="Logo" />


    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CityConnect"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        android:gravity="center" />


    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signaler • Suivre • Agir"
        android:textSize="17sp"
        android:textColor="#CBD5F5"
        android:layout_marginBottom="40dp"
        android:gravity="center" />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Une plateforme intelligente pour signaler, suivre et améliorer votre ville en temps réel."
        android:textSize="16sp"
        android:textColor="#E5E7EB"
        android:lineSpacingExtra="6dp"
        android:gravity="center"
        android:background="@drawable/bg_glass_card"
        android:padding="20dp"
        android:layout_marginBottom="40dp" />


    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Mon Profil"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient_cyan"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="18dp"
        android:elevation="10dp" />


    <Button
        android:id="@+id/btnViewReports"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Voir les Signalements"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient_blue"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="18dp"
        android:elevation="10dp" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Se Déconnecter"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient_grey"
        android:textColor="#FFFFFF"
        android:elevation="8dp" />

</LinearLayout>