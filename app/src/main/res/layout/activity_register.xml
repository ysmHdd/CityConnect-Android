<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#0D0D0D">

    <!-- Cercle avec icône -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_background_dark"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="36sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créer un compte"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.02"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejoignez notre communauté"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginBottom="32dp"/>

    <!-- Champ Nom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom complet"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Entrez votre nom"
            android:background="@drawable/edittext_background_dark"
            android:textColor="#FFFFFF"
            android:textColorHint="#606060"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawableTint="#808080"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <!-- Champ Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="votre@email.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background_dark"
            android:textColor="#FFFFFF"
            android:textColorHint="#606060"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawableTint="#808080"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <!-- Champ Mot de passe -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="••••••••"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background_dark"
            android:textColor="#FFFFFF"
            android:textColorHint="#606060"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:drawableTint="#808080"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="S'INSCRIRE"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:stateListAnimator="@null"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="24dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Déjà inscrit ? Se connecter"
        android:textSize="14sp"
        android:textColor="#808080"
        android:padding="12dp"
        android:foreground="?android:attr/selectableItemBackground"/>

</LinearLayout>