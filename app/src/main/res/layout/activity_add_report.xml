<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_premium_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ================== CARD CONTAINER ================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_glass_card"
            android:padding="22dp">

            <!-- ================= PHOTO PREMIUM ================= -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivReportPhoto"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_photo_circle"
                    app:tint="#93C5FD"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp">

                    <Button
                        android:id="@+id/btnTakePhoto"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="CamÃ©ra"
                        android:textStyle="bold"
                        android:backgroundTint="#10B981"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="6dp"/>

                    <Button
                        android:id="@+id/btnChoosePhoto"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:text="Galerie"
                        android:textStyle="bold"
                        android:backgroundTint="#3B82F6"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/etTitre"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="22dp"
                android:hint="Titre du signalement"
                android:background="@drawable/bg_input_glass"
                android:padding="16dp"
                android:textColor="#E5E7EB"
                android:textColorHint="#9CA3AF"/>

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:hint="Description dÃ©taillÃ©e"
                android:gravity="top"
                android:background="@drawable/bg_input_glass"
                android:padding="16dp"
                android:textColor="#E5E7EB"
                android:textColorHint="#9CA3AF"/>

            <TextView
                android:layout_marginTop="18dp"
                android:text="CatÃ©gorie"
                android:textStyle="bold"
                android:textColor="#93C5FD"
                android:textSize="15sp" android:layout_height="1dp" android:layout_width="1dp"/>

            <Spinner
                android:id="@+id/spinnerCategorie"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_glass"/>

            <TextView
                android:layout_marginTop="18dp"
                android:text="PrioritÃ© (1 Ã  5)"
                android:textStyle="bold"
                android:textColor="#93C5FD"
                android:textSize="15sp" android:layout_height="1dp" android:layout_width="1dp"/>

            <EditText
                android:id="@+id/etPriorite"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:hint="1 - Faible   |   5 - Urgent"
                android:inputType="number"
                android:background="@drawable/bg_input_glass"
                android:padding="16dp"
                android:textColor="#E5E7EB"
                android:textColorHint="#9CA3AF"/>

            <!-- ================= BUTTON ROW ================= -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="Annuler"
                    android:textStyle="bold"
                    android:backgroundTint="#6B7280"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/btnSaveReport"
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:text="ðŸš€ Publier"
                    android:textStyle="bold"
                    android:backgroundTint="#2563EB"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
