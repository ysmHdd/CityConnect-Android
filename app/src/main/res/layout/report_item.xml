<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp"
    android:backgroundTint="#FFFFFF">

    <!-- Section principale du rapport -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvReportInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Titre - CatÃ©gorie - PrioritÃ©"
            android:textColor="#333333"
            android:padding="8dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="ðŸ“„ DÃ©tails"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnUpdateReport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="âœï¸ Modifier"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:elevation="2dp"/>

    </LinearLayout>

    <!-- Bouton pour voir/discuter -->
    <Button
        android:id="@+id/btnToggleComments"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ðŸ’¬ Commentaires (0)"
        android:textSize="14sp"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"/>

    <!-- Section des commentaires (cachÃ©e par dÃ©faut) -->
    <LinearLayout
        android:id="@+id/layoutCommentsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F8F9FA"
        android:padding="12dp"
        android:elevation="2dp">

        <!-- En-tÃªte commentaires -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¬ Discussions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- Liste des commentaires -->
        <ListView
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp"
            android:scrollbars="vertical"
            android:background="#FFFFFF"
            android:padding="4dp"/>

        <!-- Formulaire pour ajouter un commentaire -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#E8EAF6"
            android:backgroundTint="#E8EAF6"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter un commentaire:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etNewComment"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Ã‰crivez votre commentaire ici..."
                android:inputType="textMultiLine"
                android:gravity="top"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:textColor="#333333"
                android:textColorHint="#888888"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddComment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="ðŸ“¤ Poster le commentaire"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:elevation="2dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>