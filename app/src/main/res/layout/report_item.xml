<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp"
    android:backgroundTint="#FFFFFF">

    <!-- AJOUT: ImageView pour afficher la photo du report -->
    <ImageView
        android:id="@+id/ivReportImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="#F0F0F0"
        android:layout_marginBottom="12dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvReportInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="Titre - Catégorie - Priorité"
            android:textColor="#333333"
            android:padding="8dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <!-- Boutons d'action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Détails"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnUpdateReport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Modifier"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btnDeleteReport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Supprimer"
            android:textSize="14sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:elevation="2dp"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnToggleComments"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Commentaires (0)"
        android:textSize="14sp"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"/>



    <LinearLayout
        android:id="@+id/layoutCommentsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#F8F9FA"
        android:padding="12dp"
        android:elevation="2dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discussions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>


        <ListView
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp"
            android:scrollbars="vertical"
            android:background="#FFFFFF"
            android:padding="4dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#E8EAF6"
            android:backgroundTint="#E8EAF6"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter un commentaire:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etNewComment"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Écrivez votre commentaire ici..."
                android:inputType="textMultiLine"
                android:gravity="top"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:textColor="#333333"
                android:textColorHint="#888888"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddComment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Poster le commentaire"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:elevation="2dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>