<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Carte du Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#1E1E1E"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre du Report"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description dÃ©taillÃ©e..."
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvCategorie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CatÃ©gorie: Bug"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"/>

                <TextView
                    android:id="@+id/tvPriorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PrioritÃ©: 3"
                    android:textSize="14sp"
                    android:textColor="#FF9800"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PostÃ© le: 08/12/2025 19:45"
                android:textSize="12sp"
                android:textColor="#888888"/>

        </LinearLayout>

        <!-- Section Commentaires -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¬ Commentaires"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Liste des commentaires -->
        <ListView
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="20dp"
            android:background="#1E1E1E"
            android:divider="#333333"
            android:dividerHeight="1dp"
            android:padding="8dp"/>

        <!-- Formulaire d'ajout de commentaire -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#2C2C2C"
            android:elevation="4dp">

            <EditText
                android:id="@+id/etNewComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ã‰crire un commentaire..."
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:textColor="#333333"
                android:textColorHint="#888888"/>

            <Button
                android:id="@+id/btnAddComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poster"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>