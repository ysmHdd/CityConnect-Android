<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@drawable/bg_home_premium">


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo_cityconnect"
        android:background="@drawable/bg_logo_glow"
        android:padding="14dp"
        android:contentDescription="Logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur CityConnect"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connectez-vous et rejoignez la communauté"
        android:textSize="16sp"
        android:textColor="#CBD5F5"
        android:layout_marginBottom="36dp"/>


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#94A3B8"
        android:background="@drawable/bg_glass_input"
        android:layout_marginBottom="16dp"/>


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#94A3B8"
        android:background="@drawable/bg_glass_input"
        android:layout_marginBottom="28dp"/>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Se connecter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient_blue"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Créer un compte"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient_cyan"
        android:textColor="#FFFFFF"
        android:elevation="8dp"/>

</LinearLayout>