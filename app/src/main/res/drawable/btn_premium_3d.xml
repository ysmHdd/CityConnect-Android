<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1D4ED8"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#2563EB"
                android:endColor="#1E40AF"
                android:angle="135"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

</selector>